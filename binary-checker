    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <script>
      $(document).ready(function() {
        var $collapse = $('#collapseLogs');

        // Toggle button
        $('#toggleLogs').click(function() {
          $collapse.collapse('toggle');
        });

        // Update toggle text dynamically
        $collapse.on('shown.bs.collapse', function() {
          $('#toggleLogs').html('<i class="fa fa-compress mr-2"></i>Hide Logs');
        });
        $collapse.on('hidden.bs.collapse', function() {
          $('#toggleLogs').html('<i class="fa fa-arrows-alt-v mr-2"></i>Show Logs');
        });

        // Download button click
        $('#downloadLogs').click(function() {
          alert('Downloading logs as CSV...');
          // Example: replace with real logic to export table data
        });
      });
    </script>
