    <!-- Bootstrap Bundle (JS + Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Handle external toggle button
      const toggleBtn = document.getElementById('toggleLogs');
      const collapseEl = document.getElementById('collapseLogs');
      const bsCollapse = new bootstrap.Collapse(collapseEl, { toggle: false });

      toggleBtn.addEventListener('click', () => {
        if (collapseEl.classList.contains('show')) {
          bsCollapse.hide();
          toggleBtn.innerHTML = '<i class="bi bi-arrows-expand me-2"></i>Show Logs';
        } else {
          bsCollapse.show();
          toggleBtn.innerHTML = '<i class="bi bi-arrows-collapse me-2"></i>Hide Logs';
        }
      });
    </script>
