    <script>
      $(document).ready(function() {
        $('#collapseLogs').on('show.bs.collapse', function() {
          $('.arrow-icon').addClass('arrow-rotate');
        });
        $('#collapseLogs').on('hide.bs.collapse', function() {
          $('.arrow-icon').removeClass('arrow-rotate');
        });
      });
