<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Black Star Rating from API</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f8fafc;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      flex-direction: column;
    }

    h2 {
      margin-bottom: 10px;
    }

    .stars {
      display: flex;
      gap: 8px;
      font-size: 45px;
      color: #ccc; /* default color (gray when not filled) */
    }

    .star.filled {
      color: #000; /* black stars */
    }

    .rating-info {
      margin-top: 10px;
      font-size: 18px;
      color: #333;
    }
  </style>
</head>
<body>

  <h2>Product Rating</h2>

  <div class="stars" id="stars">
    <span class="star">★</span>
    <span class="star">★</span>
    <span class="star">★</span>
    <span class="star">★</span>
    <span class="star">★</span>
  </div>

  <div class="rating-info" id="rating-info">Loading rating...</div>

  <script>
    const stars = document.querySelectorAll('.star');
    const info = document.getElementById('rating-info');

    // Simulated API response (replace with your real API call)
    async function fetchRatingFromAPI() {
      return new Promise(resolve => {
        setTimeout(() => {
          resolve({ rating_percentage: 86 }); // example: 86%
        }, 1000);
      });
    }

    async function loadRating() {
      const response = await fetchRatingFromAPI();
      const percentage = response.rating_percentage;
      
      // Convert percentage (0–100) → rating out of 5
      const rating = (percentage / 100) * 5;
      
      const fullStars = Math.floor(rating);
      const hasHalfStar = rating - fullStars >= 0.5;

      // Reset all stars
      stars.forEach(star => {
        star.classList.remove('filled');
        star.style.background = '';
        star.style['-webkit-background-clip'] = '';
        star.style['-webkit-text-fill-color'] = '';
      });

      // Fill full stars
      for (let i = 0; i < fullStars; i++) {
        stars[i].classList.add('filled');
      }

      // Half star logic
      if (hasHalfStar && fullStars < 5) {
        stars[fullStars].innerHTML = '★';
        stars[fullStars].style.background = 'linear-gradient(90deg, #000 50%, #ccc 50%)';
        stars[fullStars].style['-webkit-background-clip'] = 'text';
        stars[fullStars].style['-webkit-text-fill-color'] = 'transparent';
      }

      // Display info
      info.textContent = `Rating: ${rating.toFixed(1)} / 5 (${percentage}%)`;
    }

    loadRating();
  </script>

</body>
</html>
